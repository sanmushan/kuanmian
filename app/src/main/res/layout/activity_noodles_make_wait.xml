<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noodle_make_wait_bg"
    android:orientation="vertical">
    <include layout="@layout/common_head_view" />
    <LinearLayout
        android:layout_width="1000px"
        android:layout_height="500px"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="260px"
        android:gravity="center"
        android:background="@drawable/tv_noodle_make_wait_bg">
        <com.benxiang.noodles.view.swingindicator.SwingIndicator
            app:circleRadius="10px"
            app:cycle="600"
            app:swingRadius="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <TextView
            android:layout_marginTop="80px"
            android:id="@+id/tv_noodle_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/noodle_make_wait"
            android:textSize="@dimen/btn_payment" />
    <!--    <com.benxiang.noodles.view.AutoSplitTextView
            android:id="@+id/tv_noodle_no_make_finish"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/noodle_make_wait"
            android:textSize="@dimen/btn_payment" />-->
    </LinearLayout>
</LinearLayout>