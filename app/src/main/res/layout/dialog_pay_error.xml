<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1102px"
    android:layout_height="680px"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="460px"
        android:layout_gravity="center"
        android:src="@drawable/pay_error" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:background="@color/pay_error_tv_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/shopping_cart_tv"
        tools:text="@string/pay_error" />
</LinearLayout>