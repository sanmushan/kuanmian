<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="dialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="radiobutton">
        <item name="android:layout_width">327px</item>
        <item name="android:layout_height">55px</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">106px</item>
        <item name="android:drawablePadding">-50px</item>
        <item name="android:textColor">@drawable/radiobutton_tv_color</item>
        <item name="android:textSize">@dimen/radio_btn</item>
    </style>

    <style name="order_new1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/shopping_cart_tv</item>
    </style>

    <style name="order_new2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30px</item>
        <item name="android:textSize">@dimen/shopping_cart_tv</item>
    </style>

    <style name="btn_command">
        <item name="android:layout_height">78px</item> //78
        <item name="android:textSize">@dimen/shopping_cart_tv</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_command_bg</item>
    </style>

    <style name="tv_goods_complete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">42px</item>
    </style>

    <style name="TextViewErrorTip">
        <item name="android:drawableLeft">@drawable/icon_error_tip</item>
        <item name="android:drawablePadding">@dimen/weight_padding_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50px</item>
    </style>

    <style name="ErrorDialogButton">
        <item name="android:background">@drawable/btn_error_dialog</item>
        <item name="android:padding">@dimen/weight_padding_small</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@drawable/btn_error_dialog_text</item>
    </style>

    <style name="NormalTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/weight_padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="goods_title_tv">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="ib_list_getroom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>

    <style name="ib_tv_goods_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/order_news</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_loading_bg</item>
    </style>

    <style name="tv_select_goods">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/order_news</item>
    </style>

    <style name="btn_pay">
        <item name="android:layout_width">360px</item>
        <item name="android:layout_height">82px</item>
        <item name="android:textSize">@dimen/shopping_cart_tv</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_pay_bg</item>
    </style>

    <style name="tv_pay_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/shopping_cart_tv</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    //设置界面确定按钮

    <style name="btn_setting_confirm">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginTop">30px</item>
        <item name="android:textSize">30px</item>
        <item name="android:text">"确定添加"</item>
    </style>


</resources>
